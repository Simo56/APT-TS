{
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.2",
    "copyfiles": "^2.4.1",
    "gts": "^5.2.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.0"
  },
  "scripts": {
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "posttest": "npm run lint",
    "start": "npm run copy-views && npm run copy-public && tsc -p .",
    "copy-views": "copyfiles -u 1 ./views/**/* ./build/views",
    "copy-public": "copyfiles -u 1 ./public/**/* ./build/public",
    "dev": "nodemon src/index.ts"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  }
}
