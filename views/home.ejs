<!DOCTYPE html>
<html>
<head>
    <title>APT-TS</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="header">
        <h1><a href="/" style="text-decoration: none; color: white;">Automated Penetration Testing</a></h1>
        <button class="osint-button" onclick="window.location.href = '/osint';">Gather OSINT</button>
    </div>
    <h2 style="text-align: center;">Select Your Tools</h2>
    <div class="tool-selection">
        <form action="/run-scan" method="POST">
            <div class="domain-section">
                <label for="target">Enter IP Address or Domain:</label>
                <input type="text" id="target" name="target" required>
            </div>

            <div class="tool-container">
                <select id="scanning-tool" name="scanningTool" required>
                    <option value="" disabled selected>Scanning Tool</option>
                    <option value="nmap">Nmap</option>
                    <option value="openvas">greenbone OpenVAS</option>
                    <!-- Add more scanning tools as needed -->
                </select>
                <label for="scanning-tool">Scanning Tool:</label>
                <img class="tool-logo" src="/images/defaultscanoption.png" alt="Tool Logo" id="scanning-tool-logo">
            </div>

            <div class="tool-container">
                <select id="exploitation-tool" name="exploitationTool" required>
                    <option value="" disabled selected>Exploitation Tool</option>
                    <option value="metasploit">Metasploit</option>
                    <!-- Add more exploitation tools as needed -->
                </select>
                <label for="exploitation-tool">Exploitation Tool:</label>
                <img class="tool-logo" src="/images/defaultexploitoption.png" alt="Tool Logo" id="exploitation-tool-logo">
            </div>

            <!-- Add more tool selections and logos as needed -->

            <input type="submit" value="Run Test">
        </form>
    </div>

    <script>
        // JavaScript to display logos based on tool selection
        const scanningToolSelect = document.getElementById("scanning-tool");
        const scanningToolLogo = document.getElementById("scanning-tool-logo");

        const exploitationToolSelect = document.getElementById("exploitation-tool");
        const exploitationToolLogo = document.getElementById("exploitation-tool-logo");

        scanningToolSelect.addEventListener("change", function () {
            const selectedTool = scanningToolSelect.value;
            const toolLogoSrc = `/images/${selectedTool}.png`; // Modify the path as needed
            scanningToolLogo.src = toolLogoSrc;
        });

        exploitationToolSelect.addEventListener("change", function () {
            const selectedTool = exploitationToolSelect.value;
            const toolLogoSrc = `/images/${selectedTool}.png`; // Modify the path as needed
            exploitationToolLogo.src = toolLogoSrc;
        });
    </script>
</body>
</html>
